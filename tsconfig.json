{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "noEmit": true,
        "allowJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "paths": {
            "@daedalus/*": ["./daedalus/res/*"],
            "@axertc/*": ["./src/axertc/*"],
            "@troid/*": ["./src/troid/*"]
        }
        
    },
    "include": [
        "./src/troid/**/*",
        "./src/axertc/**/*",
        "./daedalus/res/**/*",
    ],
    "exclude": [
        "daedalus/*",
        "node_modules/*",
        "build/*",
        "venv/*",
        "src/maze/*",
        "src/troid/extras/*",
        "src/troid/resource/*",
        "src/troid/aseprites/*",
        "src/troid/Data/*",
    ]
}